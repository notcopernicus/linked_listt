public class Main {
    public static void main(String[] args) {
        Scanner kb = new Scanner(System.in);
        // Step 1: Initialize your Course object [cite: 104]
        Course myCourse = new Course("CSC252", "Data Structures II", 10);
        
        String choice = "";

        while (!choice.equalsIgnoreCase("Q")) {
            
            System.out.println("1) Enroll Student");
            System.out.println("2) Drop Student");
            System.out.println("3) Show Enrolled");
            System.out.println("4) Show Waitlist");
            System.out.println("5) Search by ID");
            System.out.println("6) Bulk Import from CSV");
            System.out.println("7) Export Roster");
            System.out.println("Q) Quit");
            System.out.print("Enter choice: ");
            
            choice = kb.next().toUpperCase();

            // Step 3: Handle choices [cite: 61-68]
            switch (choice) {
                case "1":
                    // Ask for ID and Name, then call myCourse.enroll(new Student(id, name))
                    break;
                case "2":
                    // Ask for ID, then call myCourse.drop(id)
                    break;
                case "3":
                    // Call myCourse.classList() and print the results
                    break;
                case "4":
                    // Call myCourse.waitlistSnapshot() and print the results
                    break;
                case "5":
                    // Ask for ID, call myCourse.searchById(id)
                    break;
                case "6":
                    // Ask for file path, then call myCourse.bulkImport(path)
                    break;
                case "7":
                    // Ask for file path, then call myCourse.exportRoster(path)
                    break;
                case "Q":
                    System.out.println("Exiting...");
                    break;
                default:
                    System.out.println("Invalid option. Try again.");
            }
        }
        kb.close();
    }
}